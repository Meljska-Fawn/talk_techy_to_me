<div class="text-center">
    <h1>{{title}}</h1>
    <h5>Posted by {{user.username}} on {{format_date date_created}}</h5>
    <p>{{content}}</p>

    {{#if logged_in}}
    <form id="comment-form" method="POST" data-id="{{id}}">
        <div class="input-group" style="width: 15rem height: 5rem;">
            <span class="input-group-text">Add a Comment</span>
            <textarea class="form-control" aria-label="With textarea" name="new-comment" id="new-comment"></textarea>
        </div>
        <div class="col-4">
            <button id="submit-button" class="btn btn-info" type="submit">Submit</button>
        </div>
    </form>
    {{/if}}

    <h4>Comments</h4>
    {{#if comments.length}}
    <ul>
        {{#each comments as |comment|}}
        <li>
            <p>{{comment.content}}</p>
            <p>By {{comment.user.username}} on {{format_date comment.date_created}}</p>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No comments yet.</p>
    {{/if}}
</div>

<script src="/js/addComment.js"></script>