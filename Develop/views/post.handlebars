<div class="text-center">
    <h1>{{title}}</h1>
    <h2>Posted by {{user.name}} on {{format_date date_created}}</h2>
    <p>{{content}}</p>
    <p>
        <button class="btn btn-primary"><a href="./comment.handlebars">Leave a Comment</a></button>
    </p>

    <h2>Comments</h2>
    {{#if comments.length}}
    <ul>
        {{#each comments as |comment|}}
        <li>
            <p>{{comment.content}}</p>
            <p>{{format_date date_created}}</p>
            <p>By: {{post.user.name}}</p>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <p>No comments yet.</p>
    {{/if}}
</div>

<script src="./js/addComment.js"></script>